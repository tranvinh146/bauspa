extends ../layout 

block css   
  link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css")
  link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css")

block content 
  each category in category_list
    .container-lg.my-4
      h1.text-center   Dịch vụ cho #{category.name} 
      .my-slick
        each service in service_list
          if service.category.toString() === category._id.toString()
            .container.px-md-2.px-1.text-center
              .service-box
                .service-box__img
                  img.img-fluid(
                    src=service.imgUrl 
                    alt=service.name
                  )
                .service-box__title
                  h3 #{service.name}
      
   

block javascript 
  script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js")

  script(type="text/javascript"). 
    $(document).ready(function(){
      $('.my-slick').slick({
        slidesToShow: 5,
        slidesToScroll: 5,
        infinite: false,
        arrows: true,
        dots: false,
        responsive: [
          {
            breakpoint: 1200,
            settings: {
              slidesToShow: 4,
              slidesToScroll: 4,
            }
          },
          {
            breakpoint: 1024,
            settings: {
              slidesToShow: 4,
              slidesToScroll: 4,
              arrows: false,
              dots: true,
            }
          },
          {
            breakpoint: 768,
            settings: {
              slidesToShow: 3,
              slidesToScroll: 3,
              arrows: false,
              dots: true,
            }
          },
          // You can unslick at a given breakpoint now by adding:
          // settings: "unslick"
          // instead of a settings object
        ]
      });
    });