extends layout

block metadata 
  meta(name="description" content="Bầu Spa được dẫn dắt bởi bác sĩ cùng đội ngũ 100% điều dưỡng, y sĩ cam kết chăm sóc cho mẹ và bé chuẩn y khoa. Đội ngũ nhân viên chăm sóc tận nhà cho mẹ ở cử và bé sơ sinh.")
  meta(name="keywords" content="Bầu Spa, spa bầu, chăm sóc mẹ và bé, dịch vụ spa bầu, spa cho mẹ, spa cho bé, spa cho bà bầu")
  meta(name="language" content="vietnamese")
  meta(name="author" content="Bầu Spa")

block content
  #home
    section
      //- .banner.container-fluid.p-0.position-relative
